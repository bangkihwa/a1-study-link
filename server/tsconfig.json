{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/index.ts",
    "src/routes/auth.ts",
    "src/routes/subjects.ts",
    "src/controllers/authController.ts",
    "src/controllers/subjectController.ts",
    "src/middleware/**/*.ts",
    "src/types/**/*.ts",
    "src/utils/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/controllers/adminController.ts",
    "src/controllers/teacherController.ts",
    "src/controllers/studentController.ts",
    "src/database/**"
  ]
}